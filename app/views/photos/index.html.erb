<h1>Photos</h1>

<%= link_to new_photo_path do%>
New photo
<%end%>
<br>
<br>

<% @photos.each do |photo| %>
<% @photo = photo%>
  <%= photo.title %><br>
  <%= image_tag photo.image.url (:medium)%> <br>
  <%= form_for([@photo, @photo.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
  <% end %>
<% end %>
