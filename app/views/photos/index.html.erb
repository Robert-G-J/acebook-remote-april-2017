<!DOCTYPE html>
<html>
  <body>
    <h1>Photos</h1>

    <%= link_to new_photo_path do%>
    New photo
    <%end%>
    <br>
    <br>

    <% @photos.each do |photo| %>
      <%@photo = photo %>
      <%= photo.title %><br>
      <%= image_tag photo.image.url (:medium)%> <br>
      <h2>Comments</h2>
      <% photo.photo_comments.each do |comment| %>
        <%= render 'photo_comments/comment' %>
      <% end %>
      <h2>Add a comment:</h2>
      <%= render 'photo_comments/form' %>
    <% end %>
  </body>
</html>
