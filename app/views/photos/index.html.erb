<!DOCTYPE html>
<html>
  <body>
    <h1>Photos</h1>

    <%= link_to new_photo_path do%>
    New photo
    <%end%>
    <br>
    <br>
<% @photos.each do |photo| %>
    <p> <strong>Title:</strong>
      <%=photo.title %>
      <br>
    </p>

  <%= image_tag photo.image.url (:medium)%> <br>
  <h2> Comments </h2>
  <%= render photo.photo_comments %>

  <h2> Add a comment: </h2>
  <%= form_for([photo, photo.photo_comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
    <% end %>
<%end %>


  </body>
</html>
